@model SchoolManagementSystem.Models.Class

<h2>Delete</h2>
<div>
    <h5>Are you sure you want to delete this?</h5>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ClassName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ClassName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ClassCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ClassCode)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FinishDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FinishDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TeacherId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TeacherId)
            </dd>
        </dl>
        <form id="deleteForm" data-class-id="@Model.ClassId" method="post">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#deleteForm').submit(function (event) {
                event.preventDefault();
                var classId = $(this).data('class-id');
                console.log(classId);

                $.ajax({
                    url: '/Class/Delete/' + classId,
                    type: 'DELETE',
                    success: function (result) {
                        alert('Class deleted successfully!');
                        window.location.href = '/Class/Index';
                    },
                    error: function (err) {
                        alert('Error deleting class');
                    }
                });
            });
        });
    </script>
}
