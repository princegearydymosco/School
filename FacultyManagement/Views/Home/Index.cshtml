@{
    ViewData["Title"] = "Home Page";
}
<!-- Carousel -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators d-none">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://via.placeholder.com/1200x500?text=Welcome+to+Our+School" class="d-block w-100" alt="School Image 1">
            <div class="carousel-caption d-none d-md-block">
                <h5>Welcome to Our School</h5>
                <p>Your child's future begins here.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://via.placeholder.com/1200x500?text=High+Quality+Education" class="d-block w-100" alt="School Image 2">
            <div class="carousel-caption d-none d-md-block">
                <h5>High Quality Education</h5>
                <p>Providing excellent learning experiences.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://via.placeholder.com/1200x500?text=Join+Us+Today" class="d-block w-100" alt="School Image 3">
            <div class="carousel-caption d-none d-md-block">
                <h5>Join Us Today</h5>
                <p>Be a part of our vibrant school community.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Main Content -->
<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to School!</h1>
    </div>
    <!-- About Section -->
    <section>
        <div class="row">
            <div class="col-md-6">
                <h2>About Us</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam convallis vehicula est, et lacinia tortor aliquet sit amet. Duis ut dui quis nisi fringilla gravida.</p>
            </div>
            <div class="col-md-6">
                <img src="https://via.placeholder.com/500x300?text=About+Us" class="img-fluid" alt="About Us">
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="my-5">
        <h2 class="text-center">Our Services</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/350x200?text=Service+1" class="card-img-top" alt="Service 1">
                    <div class="card-body">
                        <h5 class="card-title">Service 1</h5>
                        <p class="card-text">Detailed description of the first service offered by the school.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/350x200?text=Service+2" class="card-img-top" alt="Service 2">
                    <div class="card-body">
                        <h5 class="card-title">Service 2</h5>
                        <p class="card-text">Detailed description of the second service offered by the school.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/350x200?text=Service+3" class="card-img-top" alt="Service 3">
                    <div class="card-body">
                        <h5 class="card-title">Service 3</h5>
                        <p class="card-text">Detailed description of the third service offered by the school.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
