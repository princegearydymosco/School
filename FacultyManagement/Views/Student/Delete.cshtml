@model SchoolManagementSystem.Models.Student

<h2>Delete</h2>
<div>
    <h5>Are you sure you want to delete this?</h5>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentFName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentFName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentLName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentLName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnrolDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnrolDate)
            </dd>
        </dl>
        <form id="deleteForm" data-student-id="@Model.StudentId" method="post">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#deleteForm').submit(function (event) {
                event.preventDefault();
                var studentId = $(this).data('student-id');
                console.log(studentId);

                $.ajax({
                    url: '/Student/Delete/' + studentId,
                    type: 'DELETE',
                    success: function (result) {
                        alert('Student deleted successfully!');
                        window.location.href = '/Student/Index';
                    },
                    error: function (err) {
                        alert('Error deleting student');
                    }
                });
            });
        });
    </script>
}
