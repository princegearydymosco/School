@model IEnumerable<SchoolManagementSystem.Models.Student>

<h2>Students</h2>
<p>
    <a asp-action="New" class="btn btn-primary">New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped d-none d-md-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.StudentFName</td>
                    <td>@student.StudentLName</td>
                    <td>
                        <a asp-action="Show" asp-route-id="@student.StudentId" class="btn btn-info btn-sm">Show</a>
                        <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-md-none">
        @foreach (var student in Model)
        {
            <div class="border-bottom mb-3">
                <p><strong>ID:</strong> @student.StudentId</p>
                <p><strong>First Name:</strong> @student.StudentFName</p>
                <p><strong>Last Name:</strong> @student.StudentLName</p>
                <p>
                    <a asp-action="Show" asp-route-id="@student.StudentId" class="btn btn-info btn-sm">Show</a>
                    <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger btn-sm">Delete</a>
                </p>
            </div>
        }
    </div>
</div>
