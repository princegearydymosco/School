@model SchoolManagementSystem.Models.Teacher

<h2>Delete</h2>
<div>
    <h5>Are you sure you want to delete this?</h5>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TeacherFName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TeacherFName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TeacherLName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TeacherLName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.EmployeeNumber)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EmployeeNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.HireDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.HireDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Salary)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Salary)
            </dd>
        </dl>
        <form id="deleteForm" data-teacher-id="@Model.TeacherId" method="post">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#deleteForm').submit(function (event) {
                event.preventDefault();
                var teacherId = $(this).data('teacher-id');
                console.log(teacherId);

                $.ajax({
                    url: '/Teacher/Delete/' + teacherId,
                    type: 'DELETE',
                    success: function (result) {
                        alert('Teacher deleted successfully!');
                        window.location.href = '/Teacher/Index';
                    },
                    error: function (err) {
                        alert('Error deleting teacher');
                    }
                });
            });
        });
    </script>
}
